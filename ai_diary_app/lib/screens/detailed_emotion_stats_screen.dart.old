  // 주별 날짜 계산을 위한 헬퍼 메서드들
  int _getWeekOfYear(DateTime date) {
    final firstDayOfYear = DateTime(date.year, 1, 1);
    final firstMondayOfYear = _getWeekStart(firstDayOfYear);
    final daysSinceFirstMonday = date.difference(firstMondayOfYear).inDays;
    return (daysSinceFirstMonday / 7).floor() + 1;
  }

  int _getWeeksInYear(int year) {
    final lastDayOfYear = DateTime(year, 12, 31);
    return _getWeekOfYear(lastDayOfYear);
  }

  Widget _buildAllTimeView(List<DiaryEntry> diaries) {
    if (diaries.isEmpty) {
      return const Center(
        child: Padding(
          padding: EdgeInsets.all(32),
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Icon(
                Icons.insights_outlined,
                size: 80,
                color: Colors.grey,
              ),
              SizedBox(height: 16),
              Text(
                '아직 작성된 일기가 없습니다.',
                style: TextStyle(
                  fontSize: 18,
                  fontWeight: FontWeight.w500,
                  color: Colors.grey,
                ),
              ),
              SizedBox(height: 8),
              Text(
                '일기를 작성하면 전체 감정 통계를 확인할 수 있습니다.',
                style: TextStyle(
                  fontSize: 14,
                  color: Colors.grey,
                ),
                textAlign: TextAlign.center,
              ),
            ],
          ),
        ),
      );
    }

    return SingleChildScrollView(
      padding: const EdgeInsets.all(16),
      child: Column(
        children: [
          _buildAllTimeInsight(diaries),
        ],
      ),
    );
  }

  Widget _buildAllTimeInsight(List<DiaryEntry> diaries) {
    // 전체 감정 분석
    final emotionCounts = <String, int>{};
    for (final diary in diaries) {
      if (diary.emotion != null && diary.emotion!.isNotEmpty) {
        emotionCounts[diary.emotion!] = (emotionCounts[diary.emotion!] ?? 0) + 1;
      }
    }

    final mostFrequentEmotion = emotionCounts.isNotEmpty
        ? emotionCounts.entries.reduce((a, b) => a.value > b.value ? a : b)
        : null;

    final totalDiaries = diaries.length;
    final averagePerMonth = totalDiaries > 0
        ? (totalDiaries / DateTime.now().difference(diaries.first.createdAt).inDays * 30).round()
        : 0;

    return _buildInsightCard(
      title: '전체 감정 인사이트',
      insights: [
        InsightItem(
          icon: Icons.book_outlined,
          title: '총 일기 수',
          value: '$totalDiaries개',
          subtitle: '지금까지 작성한 모든 일기',
          color: const Color(0xFF6B73FF),
        ),
        if (mostFrequentEmotion != null)
          InsightItem(
            icon: Icons.favorite_outlined,
            title: '가장 많은 감정',
            value: mostFrequentEmotion.key,
            subtitle: '${mostFrequentEmotion.value}회 (${((mostFrequentEmotion.value / totalDiaries) * 100).round()}%)',
            color: const Color(0xFFE53E3E),
          ),
        if (averagePerMonth > 0)
          InsightItem(
            icon: Icons.timeline_outlined,
            title: '월평균 작성 수',
            value: '${averagePerMonth}개',
            subtitle: '꾸준한 일기 작성 습관',
            color: const Color(0xFF38A169),
          ),
        if (emotionCounts.length > 1)
          InsightItem(
            icon: Icons.palette_outlined,
            title: '감정 다양성',
            value: '${emotionCounts.length}가지',
            subtitle: '다양한 감정을 표현하고 있어요',
            color: const Color(0xFFD69E2E),
          ),
      ],
    );
  }

  DateTime _getWeekStartFromYearWeek(int year, int weekOfYear) {
    final firstDayOfYear = DateTime(year, 1, 1);
    final firstMondayOfYear = _getWeekStart(firstDayOfYear);
    return firstMondayOfYear.add(Duration(days: (weekOfYear - 1) * 7));
  }

}

class InsightItem {
  final IconData icon;
  final String title;
  final String value;
  final String subtitle;
  final Color color;

  InsightItem({
    required this.icon,
    required this.title,
    required this.value,
    required this.subtitle,
    required this.color,
  });
}