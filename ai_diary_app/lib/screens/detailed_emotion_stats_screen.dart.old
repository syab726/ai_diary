            TextButton(
              onPressed: () {
                final selectedDate = DateTime(selectedYear, selectedMonthNum);
                final monthDifference = (selectedDate.year - currentMonth.year) * 12 +
                                      (selectedDate.month - currentMonth.month);
                Navigator.of(context).pop(monthDifference);
              },
              child: const Text(
